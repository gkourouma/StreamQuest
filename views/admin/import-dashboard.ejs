<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
  </head>
  <body>
    <h1>Admin Import Dashboard</h1>

    <h2>Import Movies by Genre</h2>
    <ul>
      <% Object.entries(genreMap).forEach(([id, name]) => { %>
      <li>
        <a href="/admin/import/discover?genre=<%= id %>">Import <%= name %></a>
      </li>
      <% }) %>
    </ul>

    <hr />

    <h2>Admin Update Actions</h2>
    <ul>
      <li><a href="/admin/update-all-movies">Update All Movie Details</a></li>
      <li>
        <a href="/admin/batch-update-type">Update All Types (Movie or TV)</a>
      </li>
      <li>
        <a href="/admin/update-similar">Update Similar Recommendations</a>
      </li>
      <li><a href="/admin/update-cast-only">Update Only Cast Info</a></li>
      <h2>Import by Category</h2>

      <form action="/admin/import" method="get" style="margin-bottom: 2rem">
        <label for="category">Select a category:</label>
        <select name="category" id="category">
          <option value="upcoming">Upcoming</option>
          <option value="popular">Popular</option>
          <option value="top_rated">Top Rated</option>
          <option value="discover">Discover by Genre</option>
        </select>

        <label for="genre">Genre ID (only for discover):</label>
        <input
          type="text"
          name="genre"
          id="genre"
          placeholder="e.g. 28 for Action"
        />

        <button type="submit">Import</button>
      </form>

