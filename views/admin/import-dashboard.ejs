<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Import Dashboard</title>
    <style>
      body {
        font-family: sans-serif;
        padding: 2rem;
      }
      h1, h2 {
        color: #333;
      }
      form, ul {
        margin-bottom: 2rem;
      }
      button {
        padding: 0.5rem 1rem;
        margin-top: 0.5rem;
        cursor: pointer;
      }
      .status {
        padding: 0.5rem 1rem;
        border-radius: 5px;
        margin-bottom: 1rem;
      }
      .success {
        background-color: #d4edda;
        color: #155724;
      }
      .error {
        background-color: #f8d7da;
        color: #721c24;
      }
    </style>
  </head>
  <body>
    <h1>Admin Import Dashboard</h1>

    <% if (success) { %>
      <div class="status success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="status error"><%= error %></div>
    <% } %>

    <h2>üïí Recently Updated</h2>
    <ul>
      <% recentMovies.forEach(movie => { %>
        <li>
          <strong><%= movie.title %></strong> ‚Äî
          <%= movie.lastUpdated.toLocaleString() %>
        </li>
      <% }) %>
    </ul>

    <h2>Quick Update Filters</h2>
    <ul>
      <li>
        <form action="/admin/update-all-movies" method="get">
          <input type="hidden" name="filter" value="missingPoster" />
          <button type="submit">üñºÔ∏è Update Movies Missing Posters</button>
        </form>
      </li>
      <li>
        <form action="/admin/update-all-movies" method="get">
          <button type="submit">üîÑ Update All Movies & Shows</button>
        </form>
      </li>
    </ul>

    <h2>Import by Genre</h2>
    <form action="/admin/import" method="get">
      <label for="genre">Select Genre:</label>
      <select name="genre" id="genre">
        <option value="">-- Choose a Genre --</option>
        <% Object.entries(genreMap).forEach(([id, name]) => { %>
          <option value="<%= id %>"><%= name %></option>
        <% }) %>
      </select>

      <input type="hidden" name="category" value="discover" />
      <input type="hidden" name="type" value="movie" />
      <button type="submit">üéØ Import Selected Genre</button>
    </form>

    <h2>Trending</h2>
    <form action="/admin/import/trending" method="get">
      <button type="submit">üî• Import Trending (Movies & TV)</button>
    </form>

    <h2>Custom Import</h2>
    <form action="/admin/import" method="get">
      <label for="category">Category:</label>
      <select name="category" id="category">
        <option value="popular">Popular</option>
        <option value="upcoming">Upcoming</option>
        <option value="top_rated">Top Rated</option>
        <option value="discover">Discover</option>
      </select>

      <label for="genre">Genre ID (for discover only):</label>
      <input
        type="text"
        name="genre"
        id="genre"
        placeholder="e.g. 28 for Action"
      />

      <label for="type">Media Type:</label>
      <select name="type" id="type">
        <option value="movie">Movie</option>
        <option value="tv">TV</option>
      </select>

      <button type="submit">Import</button>
    </form>
  </body>
</html>
